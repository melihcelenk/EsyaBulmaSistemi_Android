<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityler.kurulumactivity.KurulumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/arkaplan"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sonucText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Cihazları ağa bağladıktan sonra aşağıdaki butona basınız.\n"
            android:textSize="18sp" />

        <Button
            android:id="@+id/taraBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/butonlar"
            android:text="Tara" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cihazlarRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:scrollbars="vertical" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>